<%= turbo_stream_from "conversation_#{@conversation.id}" %>

<div class="flex flex-col items-center w-full bg-black h-dvh">
  <div class="w-full bg-inherit text-white border-b border-gray-300 py-2 px-3 flex">
    <%= link_to "Back", conversations_path, class: "text-2xl text-white flex-initial" %>
    <p class="text-2xl text-white font-bold text-center flex-1"><%= @conversation.name %></p>
  </div>

  <div id="messages" data-controller="scroll" 
        class="w-full flex flex-col items-center bg-inherit flex-1 overflow-y-auto pb-4 px-2">
    <%= render @messages %>
  </div>

  <div class="w-full bg-black text-white mb-2 pt-2 px-2">
    <%= form_with model: [@conversation, @message], 
                  local: false, 
                  class: "flex justify-between",
                  data: { 
                    controller: "reset-form", 
                    action: "turbo:submit-end->reset-form#reset" 
                  } do |form| %>
      <%= form.text_field :content, placeholder: "Type a message...", 
                                    class: "border-2 border-gray-300 rounded-md p-2 flex-1",
                                    autocomplete: "off" %>
      <%= form.submit "Send", class: "bg-blue-500 text-white w-20 p-2 rounded-md ml-2" %>
    <% end %>
  </div>
</div>
