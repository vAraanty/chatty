<div class="min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Header Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl font-extrabold text-white sm:text-5xl md:text-6xl">
        <span class="block"><%= t('.header.title') %></span>
        <span class="block text-indigo-600 mt-2"><%= t('.header.subtitle') %></span>
      </h1>
      <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-400">
        <%= t('.header.description') %>
      </p>
    </div>

    <!-- Features Grid Above Pricing Table -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      <div class="bg-gray-800 rounded-lg p-6 text-center">
        <div class="flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white mx-auto mb-4">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-white mb-2"><%= t('.features.lightning_fast.title') %></h3>
        <p class="text-gray-400"><%= t('.features.lightning_fast.description') %></p>
      </div>

      <div class="bg-gray-800 rounded-lg p-6 text-center">
        <div class="flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white mx-auto mb-4">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-white mb-2"><%= t('.features.security.title') %></h3>
        <p class="text-gray-400"><%= t('.features.security.description') %></p>
      </div>

      <div class="bg-gray-800 rounded-lg p-6 text-center">
        <div class="flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white mx-auto mb-4">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-white mb-2"><%= t('.features.support.title') %></h3>
        <p class="text-gray-400"><%= t('.features.support.description') %></p>
      </div>
    </div>

    <!-- Stripe Pricing Table -->
    <div class="bg-gray-800 rounded-2xl p-8 shadow-xl">
      <script async src="https://js.stripe.com/v3/pricing-table.js"></script>
      <stripe-pricing-table pricing-table-id="prctbl_1QtUnLLkx8QGq3RD5WCzhIpb" 
                            publishable-key="pk_test_51NFeS3Lkx8QGq3RDgZ2sTZuFLX9uQ9G1if12meSbtsf9qBJUTpqeotahRYUPaN1jpF9Oq2yVPr4bpQp06fkpayfc00HMTf5bhX"
                            customer-session-client-secret="<%= @client_secret %>">
      </stripe-pricing-table>
    </div>

    <!-- FAQ Section -->
    <div class="mt-16">
      <h2 class="text-3xl font-bold text-white text-center mb-8"><%= t('.faq.title') %></h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-gray-800 rounded-lg p-6">
          <h3 class="text-lg font-medium text-white mb-2"><%= t('.faq.change_plans.question') %></h3>
          <p class="text-gray-400"><%= t('.faq.change_plans.answer') %></p>
        </div>
        <div class="bg-gray-800 rounded-lg p-6">
          <h3 class="text-lg font-medium text-white mb-2"><%= t('.faq.free_trial.question') %></h3>
          <p class="text-gray-400"><%= t('.faq.free_trial.answer') %></p>
        </div>
      </div>
    </div>
  </div>
</div>
