<div class="space-y-4">
  <% if users&.any? %>
    <% users.each do |user| %>
      <div class="bg-gray-800 rounded-lg p-4 flex items-center space-x-4">
        <div class="w-12 h-12 bg-gray-700 rounded-full flex items-center justify-center flex-shrink-0">
          <% if user.avatar.attached? %>
            <%= image_tag user.avatar, class: "w-full h-full object-cover rounded-full" %>
          <% else %>
            <span class="text-xl text-white"><%= user.tag.first.upcase %></span>
          <% end %>
        </div>
        
        <div class="flex-1">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-lg font-medium text-white"><%= user.name %></h3>
              <p class="text-gray-400">@<%= user.tag %></p>
            </div>
            <%= link_to t('.view_profile'),
                      user_path(user),
                      class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700",
                      data: { turbo: false } %>
          </div>
        </div>
      </div>
    <% end %>
  <% elsif users&.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-400"><%= t('.no_results') %></p>
    </div>
  <% end %>
</div> 
