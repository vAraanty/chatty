<div id="message_<%= message.id %>"
     class="mt-2 min-w-20 w-fit max-w-xs opacity-0 transition-opacity duration-100
            <%= message.user == @current_user ? 'self-end' : 'self-start' %>
            <%= message.user == @current_user ? 'text-right' : 'text-left' %>"
     data-controller="message">
    <div class="flex flex-col border-1 border-gray-300 break-words whitespace-pre-line
                rounded-md p-2 text-white <%= message.user == @current_user ? 'bg-blue-900' : 'bg-gray-900' %>">
        <!-- <strong><%= message.user.name %></strong> -->
        <p><%= message.content %></p>
        <p class="text-xs mt-2"><%= message.created_at.strftime("%H:%M") %></p>
    </div>
</div>
