<div data-controller="flash" id="flash">
  <% flash.each do |type, message| %>
    <div data-flash-target="message"
         class="fixed top-4 left-1/2 -translate-x-1/2 translate-y-[-150%] z-50 px-6 py-3
                rounded shadow-lg text-white transform transition-transform duration-500 ease-in-out 
                <%= flash_background_color(type) %>"
         role="alert">
      <%= message %>
    </div>
  <% end %>
</div> 
